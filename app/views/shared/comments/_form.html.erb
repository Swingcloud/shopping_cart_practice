<h2>發表評論</h2>
<%= form_for(Comment.new, url: url) do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content, class: 'form-control', row: 5 %>
	</div>

	<%= f.submit nil, class: 'btn btn-default' %>
<% end %>